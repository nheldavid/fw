{
  "createTicket": {
    "schema": {
      "method": "POST",
      "host": "<%= iparam.target_subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.target_api_key) %>"
      }
    }
  },
  "updateTicket": {
    "schema": {
      "method": "PUT",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets/<%= context.ticket_id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  },
  "getTicket": {
    "schema": {
      "method": "GET",
      "host": "<%= iparam.subdomain %>.freshdesk.com",
      "path": "/api/v2/tickets/<%= context.ticket_id %>",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key) %>",
        "Content-Type": "application/json"
      }
    }
  }
}
